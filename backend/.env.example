# ===========================================
# JumushTap Backend â€” Environment Variables
# ===========================================

# Django Settings
# ----------------
DJANGO_ENV=development  # development | production
SECRET_KEY=change-me-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (PostgreSQL)
# ---------------------
DB_ENGINE=django.db.backends.postgresql
DB_NAME=jumushtap
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Redis
# -----
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_DB=1

# Celery
# ------
CELERY_BROKER_URL=redis://localhost:6379/2
CELERY_RESULT_BACKEND=redis://localhost:6379/3

# SMS Provider (Choose one)
# -------------------------
SMS_PROVIDER=twilio  # twilio | local
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Service Provider
# -------------------------
PSP_PROVIDER=stripe  # stripe | local
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# AWS S3 / MinIO
# --------------
USE_S3=False  # Set to True for production
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_STORAGE_BUCKET_NAME=jumushtap-media
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=  # Optional CDN domain

# Firebase Cloud Messaging (FCM)
# ------------------------------
FCM_SERVER_KEY=your_firebase_server_key
FCM_CREDENTIALS_PATH=path/to/firebase-credentials.json

# Google Maps API
# ---------------
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Security
# --------
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CSRF_TRUSTED_ORIGINS=http://localhost:3000

# Rate Limiting
# -------------
RATE_LIMIT_ENABLE=True
RATE_LIMIT_OTP_PER_MIN=5
RATE_LIMIT_LOGIN_PER_MIN=5
RATE_LIMIT_API_PER_MIN=60

# Logging
# -------
LOG_LEVEL=INFO  # DEBUG | INFO | WARNING | ERROR
LOG_JSON_FORMAT=False  # True for production (structured logs)
